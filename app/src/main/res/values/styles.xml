<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityLayout">
        <item name="android:background">@color/blue_layout</item>
    </style>

    <style name="MainActivityButtonStyle" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">22sp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsBackGroundStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsReturnButtonStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsMessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="SearchReturnButtonStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_goneMarginLeft">4dp</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchCursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/searching_cursor</item>
    </style>

    <style name="SearchLayoutPaddingStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/search_icon_for_toolbar</item>
        <item name="closeIcon">@drawable/close_frame</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="TrackDescriptionStyle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:editTextColor">@color/text_grey</item>
        <item name="android:textColorHint">@color/text_grey</item>
    </style>

    <style name="ArrowStyle">
        <item name="drawableEndCompat">@drawable/arrow_icon</item>
    </style>

    <style name="ConnectedMessageStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19dp</item>
    </style>

    <style name="UpdateSearchButtonStyle">
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:text">@string/search_update</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ClearSearchStoryButtonStyle">
        <item name="android:layout_width">148dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:text">@string/clear_history_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SearchHistoryTitleStyle">
        <item name="android:text">@string/search_history_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="GuideLineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PlayerReturnButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@null</item>
        <item name="srcCompat">@drawable/exit_button_vector</item>
    </style>

    <style name="PlayMusicButton">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_marginTop">38.33dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="icon">@drawable/play_track_button_icon</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="PlayerButton">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:backgroundTint">@color/track_title</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/track_title</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TrackTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>