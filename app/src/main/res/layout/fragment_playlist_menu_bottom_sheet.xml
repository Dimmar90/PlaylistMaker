<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BottomSheetStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:src="@drawable/rectangle_1457" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="13dp"
            android:paddingTop="24dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/cover_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="2dp">

                    <ImageView
                        android:id="@+id/cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@drawable/placeholder_icon" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playlist_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cover_layout"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                tools:ignore="RtlHardcoded,RtlSymmetry">

                <TextView
                    android:id="@+id/playlist_name"
                    style="@style/PlaylistNameBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playlist_tracks_amount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playlist_name_layout"
                android:layout_toRightOf="@+id/cover_layout"
                android:paddingStart="8dp"
                tools:ignore="RtlHardcoded,RtlSymmetry">

                <TextView
                    android:id="@+id/playlist_tracks_amount"
                    style="@style/PlaylistTrackAmountBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_text_layout"
                android:layout_width="399dp"
                android:layout_height="61dp"
                android:layout_below="@+id/cover_layout"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/share_text"
                    style="@style/BottomSheetTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/ys_display_regular"
                    android:text="Поделиться"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_text_layout"
                android:layout_width="399dp"
                android:layout_height="61dp"
                android:layout_below="@+id/share_text_layout"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/edit_text"
                    style="@style/BottomSheetTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/ys_display_regular"
                    android:text="Редактировать информацию"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/delete_text_layout"
                android:layout_width="399dp"
                android:layout_height="61dp"
                android:layout_below="@id/edit_text_layout"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/delete_text"
                    style="@style/BottomSheetTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/ys_display_regular"
                    android:text="Удалить плейлист"
                    android:textSize="16dp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>