<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:src="@drawable/rectangle_1457" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_to_playlist_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            app:behavior_hideable="false"
            app:behavior_peekHeight="266dp">

            <TextView
                android:id="@+id/empty_playlist_message"
                style="@style/EmptyPlaylistMessage"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:text="@string/add_to_playlist_message"
                android:textColor="@color/black"
                android:textSize="@dimen/empty_media_message_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_playlist_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_to_playlist_text_layout"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_new_playlist_button"
                style="@style/AddNewPlaylistButtonStyle"
                android:layout_width="135dp"
                android:layout_height="36dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recycle_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_playlist_button_layout"
            android:paddingStart="13dp"
            android:paddingTop="24dp"
            tools:ignore="RtlSymmetry">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>


