<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityLayout">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MainActivityButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">22sp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsBackGroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsReturnButtonStyle">
        <item name="backgroundTint">@color/black</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsMessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="SearchReturnButtonStyle">
        <item name="backgroundTint">@color/black</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="searchIcon">@drawable/search_icon</item>
        <item name="closeIcon">@drawable/close_frame_night</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="elipseStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="drawableStartCompat">@drawable/ellipse_icon_night</item>
    </style>

    <style name="TrackDescriptionStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="ArrowStyle">
        <item name="drawableEndCompat">@drawable/arrow_icon_night</item>
    </style>

</resources>

