<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityLayout">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MainActivityButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">22sp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="BackGroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsReturnButtonStyle">
        <item name="backgroundTint">@color/black</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsMessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="SearchReturnButtonStyle">
        <item name="backgroundTint">@color/black</item>
        <item name="iconTint">@color/white</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_goneMarginLeft">4dp</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchViewStyle">
        <item name="searchIcon">@drawable/search_icon</item>
        <item name="closeIcon">@drawable/close_frame_night</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="elipseStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="drawableStartCompat">@drawable/ellipse_icon_night</item>
    </style>

    <style name="TrackDescriptionStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="ArrowStyle">
        <item name="drawableEndCompat">@drawable/arrow_icon_night</item>
    </style>

    <style name="ConnectedMessageStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19dp</item>
    </style>

    <style name="ClearSearchStoryButtonStyle">
        <item name="android:layout_width">148dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:text">@string/clear_history_button_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="UpdateSearchButtonStyle">
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:text">@string/search_update</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SearchHistoryTitleStyle">
        <item name="android:text">@string/search_history_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="PlayerReturnButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@null</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="srcCompat">@drawable/exit_button_vector_night</item>
    </style>

    <style name="PlayMusicButton">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="icon">@drawable/play_track_button_icon</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TrackTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="TabTitleStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabStyle">
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="EmptySearchImageStyle">
        <item name="android:src">@drawable/empty_search_image_dark_mode</item>
    </style>

    <style name="PlaylistsButtonStyle">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/navigation_item_color_dark_theme</item>
        <item name="itemTextColor">@color/navigation_item_color_dark_theme</item>
    </style>

    <style name="PlaylistCreatorFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="background">@null</item>
        <item name="boxStrokeColor">@color/box_stroke_color_dark</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="AddNewPlaylistButtonStyle">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:text">@string/add_playlist_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">54px</item>
    </style>

    <style name="ReturnButtonStyle">
        <item name="android:background">@null</item>
        <item name="srcCompat">@drawable/exit_button_vector_night</item>
    </style>

    <style name="CreatePlaylistButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddToPlaylistMessage">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlaylistNameBottomSheet">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlaylistTrackAmountBottomSheet">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>