<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mediaFragment">

    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.practicum.playlistmaker.media.ui.MediaFragment"
        android:label="fragment_media"
        tools:layout="@layout/fragment_media" >
        <action
            android:id="@+id/action_mediaFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mediaFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mediaFragment_to_playlistCreatorFragment"
            app:destination="@id/playlistCreatorFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.practicum.playlistmaker.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.practicum.playlistmaker.settings.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

    <dialog
        android:id="@+id/playerSheet"
        android:name="com.practicum.playlistmaker.player.ui.PlayerSheet"
        android:label="fragment_playlist_bottom_sheet"
        tools:layout="@layout/fragment_playlist_bottom_sheet" >
        <action
            android:id="@+id/action_playerSheet_to_playlistCreatorFragment"
            app:destination="@id/playlistCreatorFragment" />
    </dialog>

    <fragment
        android:id="@+id/playlistCreatorFragment"
        android:name="com.practicum.playlistmaker.media.ui.PlaylistCreatorFragment"
        android:label="fragment_playlist_creator"
        tools:layout="@layout/fragment_playlist_creator" />

</navigation>